# eBay API Configuration
# Get your API key from: https://developer.ebay.com/
EBAY_API_KEY=your_ebay_app_id_here

# Metals API Configuration
# Get your API key from: https://metals-api.com/
METALS_API_KEY=your_metals_api_key_here

# Database Configuration
DATABASE_URL=sqlite:////app/data/metals_scanner.db

# Scheduler Configuration
ENABLE_AUTO_SCAN=true
SCAN_INTERVAL_HOURS=2

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limits (defaults - usually don't need to change)
EBAY_DAILY_LIMIT=5000
METALS_API_MONTHLY_LIMIT=50

# Cache Duration (minutes)
CACHE_MARKET_HOURS=15
CACHE_OFF_HOURS=60
CACHE_WEEKEND=240

# API Settings
API_TIMEOUT=10
API_RETRY_ATTEMPTS=3
